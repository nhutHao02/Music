<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageSongActivity">
    <ListView
        android:id="@+id/listViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="20dp"
        android:layout_above="@+id/layoputbttm"
        />

    <Button
        android:id="@+id/addSong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/layoputbttm"
        android:layout_alignParentRight="true"
        android:background="@drawable/baseline_add_32"
        android:text="+" />
    <LinearLayout
        android:id="@+id/layoputbttm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:background="#201F1F"
        android:divider="@null"
        android:dividerHeight="0dp"
        >
        <LinearLayout
            android:id="@+id/lyMyFavorites"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/songs"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_music_note_24"
                app:tint="@color/orange" />
            <TextView
                android:id="@+id/txtMyFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="Manage Song"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyPlayList"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icPlayList"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_library_music_24"
                app:tint="#CBD3D1D1" />
            <TextView
                android:id="@+id/txtPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="Playlists"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lySearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icSearch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_search_24"
                app:tint="#CBD3D1D1"
                />
            <TextView
                android:id="@+id/txtSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="Search"
                />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/lyMore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icMore"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_more_horiz_24"
                app:tint="#CBD3D1D1"
                />
            <TextView
                android:id="@+id/txtMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="More"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>